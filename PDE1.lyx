\begin_inset Formula 
\begin{align*}
x & =r\cos\left(\vartheta\right)\\
y & =r\sin\left(\vartheta\right)\cos\left(\varphi\right)\\
z & =r\sin\left(\vartheta\right)\sin\left(\varphi\right)
\end{align*}

