\begin_layout Subsubsection*
Proof
\end_layout

\begin_layout Standard
According to Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "sub:Lem-continuous_functional"

\end_inset

, our task is to show that there are 
\begin_inset Formula $r,s\in\mathbb{N}$
\end_inset

 and a 
\begin_inset Formula $C\in\mathbb{R}_{>0}$
\end_inset

 with:
\begin_inset Formula 
\begin{align*}
\abs{\left(fT\right)\left(g\right)} & \le C\norm g_{r,s}
\end{align*}

\end_inset

Since 
\begin_inset Formula $T$
\end_inset

 is continuous, there exist 
\begin_inset Formula $r,s\in\mathbb{N}$
\end_inset

 and a 
\begin_inset Formula $\tilde{C}\in\mathbb{R}_{>0}$
\end_inset

 with:
\begin_inset Formula 
\begin{align*}
\abs{T\left(fg\right)} & \le\tilde{C}\norm{fg}_{r,s}
\end{align*}

\end_inset

Thus it remains to show that there is a 
\begin_inset Formula $c\left(r,s\right)\in\mathbb{R}_{>0}$
\end_inset

 such that for all 
\begin_inset Formula $f,g\in\mathcal{S}\left(\mathbb{R}^{n}\right)$
\end_inset

 holds:
\begin_inset Formula 
\begin{align*}
\norm{fg}_{r,s} & \le c\left(r,s\right)\norm f_{r,s}\cdot\norm g_{r,s}
\end{align*}

\end_inset

This inequality can be proven by induction in 
\begin_inset Formula $s$
\end_inset

.
\end_layout

\begin_layout Standard
Induction basis 
\begin_inset Formula $s=0$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\norm{fg}_{r,0} & =\sum_{\abs{\alpha}\le r}\sup_{x\in\mathbb{R}^{n}}\left(\abs{x^{\alpha}f\left(x\right)g\left(x\right)}\right)\le\\
 & \le\sup_{y\in\mathbb{R}^{n}}\abs{g\left(y\right)}\sum_{\abs{\alpha}\le r}\sup_{x\in\mathbb{R}^{n}}\left(\abs{x^{\alpha}f\left(x\right)}\right)=\\
 & =\norm g_{0,0}\cdot\norm f_{r,0}\le\norm g_{r,0}\cdot\norm f_{r,0}
\end{align*}

\end_inset

Induction step 
\begin_inset Formula $s\leadsto s+1$
\end_inset

: Assume that the statement holds for a 
\begin_inset Formula $s\in\mathbb{N}$
\end_inset

 for all 
\begin_inset Formula $r\in\mathbb{N}$
\end_inset

.
 Let 
\begin_inset Formula $\beta$
\end_inset

 be a multi-index with 
\begin_inset Formula $\abs{\beta}=s+1$
\end_inset

, i.e.
 
\begin_inset Formula $\beta=\left(i_{1},\ldots,i_{s+1}\right)$
\end_inset

.
 Now set:
\begin_inset Formula 
\begin{align*}
\hat{\beta} & :=\left(i_{1},\ldots,i_{s}\right) & j & :=i_{s+1} & \DD^{\beta} & =\DD^{\hat{\beta}}\frac{\partial}{\partial x^{j}}
\end{align*}

\end_inset

It holds:
\begin_inset Formula 
\begin{align*}
\DD^{\beta}\left(fg\right) & =\DD^{\hat{\beta}}\frac{\partial}{\partial x^{j}}\left(fg\right)=\DD^{\hat{\beta}}\left(\left(\frac{\partial}{\partial x^{j}}f\right)g+f\left(\frac{\partial}{\partial x^{j}}g\right)\right)
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\norm{fg}_{r,s+1} & =\norm{f\cdot g}_{r,s}+\sum_{\sr{}{\abs{\alpha}\le r}{\abs{\beta}=s+1}}\sup_{x\in\mathbb{R}}\abs{x^{\alpha}\DD^{\beta}\left(f\cdot g\right)\left(x\right)}=\\
 & =\norm{fg}_{r,s}+\sum_{\sr{}{\abs{\alpha}\le r}{\abs{\hat{\beta}}=s}}\sum_{j=1}^{n}\sup_{x\in\mathbb{R}}\abs{x^{\alpha}\DD^{\hat{\beta}}\left(\left(\frac{\partial}{\partial x^{j}}f\left(x\right)\right)g\left(x\right)+f\left(x\right)\left(\frac{\partial}{\partial x^{j}}g\left(x\right)\right)\right)}\le\\
